<!DOCTYPE html>
<html lang="uz">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Xodimlar sahifasi</title>
    <link rel="stylesheet" href="/css/index.css">
</head>
<body>
    <!-- Settings icon -->
    <div class="settings-icon" onclick="toggleSettings()">⚙️</div>

    <!-- Sidebar overlay -->
    <div class="overlay" id="overlay" onclick="toggleSettings()"></div>

    <!-- Sidebar -->
    <div class="sidebar" id="sidebar">
        <button  class="active-btn">Button 1</button>
        <button >Button 2</button>
        <button >Button 3</button>
    </div>

    <!-- Main content -->
    <div class="container">
        <form class="js-form">
            <input type="text" name="user_id" id="workerId" placeholder="ID kiriting">
            <button class="send">Yuborish</button>
        </form>
    </div>

    <!-- Modal overlay -->
    <div class="modal-overlay" id="modalOverlay" onclick="closeModal()"></div>

    <!-- Modal window -->
    <div class="modal" id="modal">
        <h2 id="workerName">Ism Familiya</h2>
        <button class="confirm-taking-photo" onclick="confirmModal(this)">Tasdiqlash</button>
        <button class="cancel" onclick="closeModal()">Bekor qilish</button>
    </div>

    <script src="/js/index.js"></script>
</body>
</html>
